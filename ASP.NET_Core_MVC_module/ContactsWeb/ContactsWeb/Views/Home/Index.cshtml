@using ContactsWeb.Entities
@model List<Contact>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div>
        @{
            if(Model.Count() == 0)
            {
                <h1>No data available</h1>
            }
            else
            {
                <table style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Number</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Number</td>
                                <td>
                                    <i class="bi bi-pencil-fill" style="display:inline-block;width:30px;height:30px;"></i>
                                    <i class="bi bi-trash" style="display:inline-block;width:30px;height:30px;"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        <br />
        <a asp-action="Add" asp-controller="Contact">+ Add Contact</a>
    </div>
</div>
